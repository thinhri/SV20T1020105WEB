@model SV20T1020105.DomainModels.Customer
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
          <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
          <!-- Ten -->
          <div class="form-group">
            <label>Tên khách hàng:</label>
            @* <input type="text" class="form-control" name="CustomerName" autoFocus value="@Model.CustomerName"> *@
            <!--Su dung khi Model co-->
            @Html.TextBoxFor(m => m.CustomerName, new { @class="form-control", name=nameof(Model.CustomerName), autoFocus="autoFocus" })
            @Html.ValidationMessage(nameof(Model.CustomerName), new { @style="color: #f00"})
            
          </div>

          <!-- Giao dich -->
          <div class="form-group">
            <label>Tên giao dịch:</label>
            <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
            @* @Html.TextBoxFor(m => m.ContactName, new { @class="form-control", name=nameof(Model.ContactName) }) *@
            @Html.ValidationMessage(nameof(Model.ContactName), new { @style="color: #f00"})
          </div>

          <div class="form-group">
            <label>Điện thoại:</label>
            <input type="text" class="form-control" name="Phone" value="@Model.Phone"> 
          </div>

          <div class="form-group">
            <label>Email:</label>
            <input type="text" class="form-control" name="Email" value="@Model.Email">
            @* @Html.TextBoxFor(m => m.Email, new { @class="form-control", name=nameof(Model.Email) }) *@
            @Html.ValidationMessage(nameof(Model.Email), new { @style="color: #f00"})
          </div>

          <div class="form-group">
            <label>Địa chỉ:</label>
            <input type="text" class="form-control" name="Address" value="@Model.Address">
          </div>

          <div class="form-group">
              <label> Tỉnh/Thành: </label>
             @*  <select class="form-control" name="Province">
                  <option value="">-- Chọn tỉnh thành --</option>
                  @foreach(var item in SV20T1020105.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }

              </select> *@
              @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class="form-control select2" })
              @Html.ValidationMessage(nameof(Model.Province), new { @style="color: #f00"})
          </div>
          <!--//TODO: Nen dung checkbox or radio-->
          <div class="form-group">
            <label> Trạng thái: </label>
            <div class="radio">
                <label>
                    <input type="radio" name="IsLocked" value="True" @if (Model.IsLocked)
                                {
                                    <text>checked</text>
                                }>
                    Tài khoản bị khóa
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="IsLocked" value="False" @if (!Model.IsLocked)
                                {
                                    <text>checked</text>
                                }>
                    Tài khoản không bị khóa
                </label>
            </div>
        </div>

          <div class="form-group">
                @Html.ValidationMessage("Error", new { @style="color: #f00"})
          </div>

          <div class="form-group text-right">
              <button type="submit" class="btn btn-primary">
                  <i class="fa fa-floppy-o"></i>
                  Lưu dữ liệu
              </button>

              <a href="~/Customer" class="btn btn-default">
                  Quay lại
              </a>
          </div>

        </form>
    </div>
</div>