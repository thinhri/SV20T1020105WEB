@model CustomerSearchResult
@{
    Layout = null;
}
<p style="margin: 10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<!-- Thiet ke table-->
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped"> 
        <thread>
                <tr class="bg-primary" style="background-color: #4093ba; color: white;">
                <th>Tên khách hàng</th>
                <th>Tên giao dịch</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Tỉnh thành</th>
                <th>Địa chỉ</th>  
                <th>Trạng thái</th>
                <th style="width:80px"></th>
            </tr>

        </thread>
        <tbody>
@foreach (var item in Model.Data)
{
    <tr>
        <td>@item.CustomerName</td>
        <td>@item.ContactName</td>
        <td>@item.Phone</td>
        <td>@item.Email</td>
        <td>@item.Province</td>
        <td>@item.Address</td>
        <td>@item.IsLocked</td>
        <td>
            <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-info">
                <i class="fa fa-edit"></i>
            </a>
                <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                <i class="fa fa-remove"></i>
            </a>
        </td>
    </tr>
}
        </tbody>
    </table>
</div>

<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch('#formSearch', @p)">@p</a></li>
            }
        }

      </ul>
</div>
